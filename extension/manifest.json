{
  "manifest_version": 3,
  "name": "Toca da Onça Agente",
  "version": "1.0.0",
  "description": "Automação inteligente para suas vendas - Capture dados e automatize tarefas diretamente do navegador",
  "author": "Toca da Onça",
  "homepage_url": "https://connect-sparkle-87.lovable.app",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "notifications",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://*.tiktok.com/*",
    "https://*.instagram.com/*",
    "https://*.facebook.com/*",
    "https://*.whatsapp.com/*",
    "https://*.mercadolivre.com.br/*",
    "https://*.shopee.com.br/*",
    "https://*.amazon.com.br/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Toca da Onça Agente"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.tiktok.com/*",
        "https://*.instagram.com/*",
        "https://*.facebook.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
